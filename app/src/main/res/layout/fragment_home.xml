<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.eider.navigation_drawer.Fragment.HomeFragment">


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/Spiner_piloto_o_pasajero"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:hint="publicar como:"
        android:textColorHint="@color/colorPrimary"
        app:met_floatingLabel="highlight"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:textSize="13dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_origen"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:padding="@dimen/bottom_text_size"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/Spiner_piloto_o_pasajero"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="@+id/edit_destino"
        app:layout_constraintLeft_toLeftOf="@+id/edit_destino">

        <EditText
            android:id="@+id/input_origen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="Origen"
            android:textColorHint="#05ab9a" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_destino"
        android:layout_width="346dp"
        android:layout_height="67dp"
        android:layout_marginStart="10dp"
        android:padding="@dimen/bottom_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_origen">

        <EditText
            android:id="@+id/input_destino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="Destino"
            android:textColorHint="#05ab9a" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/boton_modal_fecha"
        android:background="@android:color/white"
        android:text="fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_destino"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/Spinner_plazas_disponibles"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:hint="Plazas Disponibles:"
        android:textColorHint="@color/colorPrimary"
        app:met_floatingLabel="highlight"
        tools:layout_constraintTop_creator="1"
        android:textSize="13dp"
        android:layout_marginTop="6dp"

        app:layout_constraintTop_toBottomOf="@+id/edit_destino"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="parent">

    </com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="218dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="215dp"
        tools:layout_constraintLeft_creator="1"
        map:layout_constraintTop_toTopOf="@+id/edit_origen"
        android:layout_marginStart="10dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="10dp"
        map:layout_constraintRight_toRightOf="parent"
        map:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>
